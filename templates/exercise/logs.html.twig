{% extends 'base.html.twig' %}

{% block title %}

    Exercise Logs

{% endblock %}

{% block body %}
    <div class="container">
        <h1>Exercise Logs</h1>
        <table class="table table-bordered mt-4">
            <thead class="thead-dark">
            <tr>
                <th>Name</th>
                <th>Duration</th>
                <th>Reps</th>
                <th>Sets</th>

            </tr>
            </thead>
            <tbody>
            {% for log in logs %}
                <tr>
                    <td>{{ log.exercise.name }}</td>
                    <td>{{ log.duration }}</td>
                    <td>{{ log.reps }}</td>
                    <td>{{ log.sets }}</td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="3">No logs found</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>

{% endblock %}