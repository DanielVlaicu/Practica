{% extends 'base.html.twig' %}

{% block title %}Muscle Groups{% endblock %}

{% block body %}
    <h1>Muscle Groups</h1>
    <a href="{{ path('muscle-group_create') }}" class="btn btn-primary mb-3">Create Muscle Group</a>

    <ul class="list-group">
        {% for muscleGroup in muscleGroups %}
            <li class="list-group-item d-flex justify-content-between align-items-center mb-2">
                {{ muscleGroup.name }}
                <a href="{{ path('exercises_by_muscle_group', {'muscleGroupName': muscleGroup.name}) }}" class="btn btn-secondary">View Exercises</a>
            </li>
        {% else %}
            <li class="list-group-item">No muscle groups found.</li>
        {% endfor %}
    </ul>
{% endblock %}