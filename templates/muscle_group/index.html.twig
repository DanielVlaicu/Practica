{% extends 'base.html.twig' %}

{% block title %}Muscle Groups{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" integrity="sha384-JcKb8q3iqJ61gNV9KGb8thSsNjpSL0n8PARn9HuZOnIxN0hoP+VmmDGMN5t9UJ0Z" crossorigin="anonymous">
    <style>
        .list-group-item {
            margin-bottom: 10px;
        }
    </style>
{% endblock %}

{% block body %}
    <div class="container">
        <h1>Muscle Groups</h1>

        <ul class="list-group">
            {% for muscleGroup in muscleGroups %}
                <li class="list-group-item d-flex justify-content-between align-items-center">
                    {{ muscleGroup.name }}
                    <div>
                        <a href="{{ path('exercises_by_muscle_group', {'muscleGroupName': muscleGroup.name}) }}" class="btn btn-secondary">View Exercises</a>
                        <form action="{{ path('delete_muscle_group', { 'id': muscleGroup.id }) }}" method="POST" style="display:inline-block;">
                            <button type="submit" class="btn btn-danger ml-1">
                                Delete
                            </button>
                        </form>
                    </div>
                </li>
            {% else %}
                <li class="list-group-item">No muscle groups found.</li>
            {% endfor %}
        </ul>
    </div>
{% endblock %}
